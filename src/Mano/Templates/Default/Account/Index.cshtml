@model User
@{ 
    ViewBag.Title = Model.Name ?? Model.UserName;
}
<div class="jumbotron masthead jumbopurple jumbotron-compact">
    <div class="container main_container">
        <img class="avatar" src="~/assets/default/images/non-avatar.png" class="avatar" />
        <div>
            <h1 class="main_header">
                <a href="javascript:;">@(Model.Name ?? Model.UserName)</a>
            </h1>
            <h3>@(DateTime.Now.Year - Model.Birthday.Year) 岁 @Model.Province @Model.City</h3>
        </div>
    </div>
</div>
<div class="container page-container vertical-center">
    <div class="row">
        <div class="col-md-9">
            <h2>技能雷达图</h2>
            <canvas id="chartRadar" style="width:50%; height:250px;"></canvas>
            <script>
                new Chart(document.getElementById("chartRadar").getContext("2d")).Radar(@Html.UserRadar(Model.Projects), { animation: Modernizr.canvas });
            </script>
            <h2>代码统计</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>技能</th>
                        <th>代码量</th>
                        <th>使用时长</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Html.UserSkill(Model.Projects))
                    { 
                        <tr>
                            <td>@x.Skill</td>
                            <td>@x.Count 行</td>
                            <td>@x.Display</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @Html.Partial("~/Templates/Default/Account/Sidebar.cshtml")
    </div>
</div>