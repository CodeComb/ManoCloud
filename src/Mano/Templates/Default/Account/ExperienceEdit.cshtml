   <form id="ajax-edit-form" asp-action="ExperienceEdit" asp-controller="Account" asp-route-id="@Model.Id" method="post">
               <input name="id" type="hidden" value="@Model.Id" getUrl="/AjaxView/ExperienceTbody"/>
               <input name="gid" type="hidden" value="@ViewBag.Experience.Id"/>
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">添加工作经历</h4>
                </div>
                <div class="modal-body">
                    <p>
                        <label>工作单位 *</label>
                        <input type="text" name="Company" class="form-control" value="@ViewBag.Experience.Company" required />
                    </p>
                    <p>
                        <label>职务 *</label>
                        <input type="text" name="Position" class="form-control" value="@ViewBag.Experience.Position" required />
                    </p>
                    <p>
                        <label>就职时间 *</label>
                        <input type="text" name="Begin" class="datetime form-control" value="@ViewBag.Experience.Begin" required />
                    </p>
                    <p>
                        <label>离职时间 (未离职请留空)</label>
                        <input type="text" name="End" class="datetime form-control" value="@ViewBag.Experience.End"/>
                    </p>
                    <p>
                        <label>工作简介</label>
                        <div class="markdown-editor-outer">
                            <textarea class="textbox markdown-editor" name="Hint" value="@ViewBag.Experience.Hint"></textarea>
                            <div class="markdown-editor-bottom">支持Markdown语法、拖拽图片文件至编辑区或直接从剪贴板粘贴可上传图片文件。</div>
                        </div>
                    </p>
                    <span id="ajax-error-message"></span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="javascript:editSubmit()">编辑</button>
                </div>
            </form>
            <link href="~/assets/default/styles/datetimepicker.css" rel="stylesheet" />
<script src="~/assets/default/scripts/jquery.datetimepicker.js"></script>