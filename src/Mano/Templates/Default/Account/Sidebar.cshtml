@model User
<div class="col-md-3">
    <nav class="bs-docs-sidebar">
        <h4>用户信息</h4>
        <ul class="nav bs-docs-sidenav">
            <li><a asp-action="Index" asp-controller="Account" asp-route-id="@Model.Id">个人资料</a></li>
            <li><a href="//@Model.Domains.OrderByDescending(x => x.Default).First().DomainName">查看简历</a></li>
        </ul>

        @if (User.IsSignedIn() && (User.AnyRoles("Root, Master") || User.Current.Id == Model.Id))
        {
            <h4>帐号管理</h4>
            <ul class="nav bs-docs-sidenav">
                <li><a asp-action="Profile" asp-controller="Account" asp-route-id="@Model.Id">修改个人信息</a></li>
                <li><a asp-action="Password" asp-controller="Account" asp-route-id="@Model.Id">修改密码</a></li>
                <li><a asp-action="Email" asp-controller="Account" asp-route-id="@Model.Id">电子邮箱绑定</a></li>
                <li><a asp-action="Third" asp-controller="Account" asp-route-id="@Model.Id">第三方平台绑定</a></li>
            </ul>

            <h4>简历管理</h4>
            <ul class="nav bs-docs-sidenav">
                <li><a asp-action="Introduction" asp-controller="Account" asp-route-id="@Model.Id">自我介绍</a></li>
                <li><a asp-action="Project" asp-controller="Account" asp-route-id="@Model.Id">我的项目</a></li>
                <li><a asp-action="Experience" asp-controller="Account" asp-route-id="@Model.Id">工作经历</a></li>
                <li><a asp-action="Certification" asp-controller="Account" asp-route-id="@Model.Id">我的证书</a></li>
                <li><a asp-action="Skill" asp-controller="Account" asp-route-id="@Model.Id">我的技能</a></li>
                <li><a asp-action="Domain" asp-controller="Account" asp-route-id="@Model.Id">域名绑定</a></li>
            </ul>
        }
    </nav>
</div>